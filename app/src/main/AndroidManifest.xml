<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.chatsapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.ChatsApp"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".activity.ChatActivity"
            android:exported="false" />
        <activity
            android:name=".activity.SetupProfileActivity"
            android:exported="false" />
        <activity
            android:name=".activity.OTPCheckActivity"
            android:exported="false"
            android:label="@string/title_activity_otpcheck"
            android:theme="@style/Theme.ChatsApp.NoActionBar"
            android:windowSoftInputMode="stateVisible" />
        <activity
            android:name=".activity.PhoneNumberActivity"
            android:exported="true"
            android:label="@string/title_activity_phone_number"
            android:theme="@style/Theme.ChatsApp.NoActionBar"
            android:windowSoftInputMode="stateVisible">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.MainActivity"
            android:exported="false"
            android:label="@string/app_name"
            android:theme="@style/Theme.ChatsApp.NoActionBar" />
    </application>

</manifest>